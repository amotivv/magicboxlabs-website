---
interface Props {
  size?: 'sm' | 'md' | 'lg';
  className?: string;
}

const { size = 'md', className = '' } = Astro.props;

const sizeClasses = {
  sm: 'w-4 h-4',
  md: 'w-8 h-8',
  lg: 'w-12 h-12'
};
---

<div class={`relative ${sizeClasses[size]} ${className}`} role="status">
  <div class="absolute animate-spin rounded-full border-4 border-solid border-primary border-t-transparent"></div>
  <span class="sr-only">Loading...</span>
</div>